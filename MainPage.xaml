<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Moonstone3.MainPage"
             BackgroundColor="Black">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">


            <Image
                Source="jgice.jpg"
                SemanticProperties.Description="us"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label 
            x:Name="label"
            Text="Moonstone"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

            <Switch
                x:Name="moonstone"
                HorizontalOptions="Center"
                IsToggled="False"
                Toggled="switcher_Toggled"
                />
            <Image
                Source="moon.png"
                SemanticProperties.Description="moon"
                HeightRequest="200"
                HorizontalOptions="Start"
                VerticalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
