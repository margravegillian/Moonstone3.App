<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Moonstone3.App">
    <Application.Resources>
        <!-- Define purple color resources using SolidColorBrush -->
        <Color x:Key="ShellTitleColor">#800080</Color> <!-- Purple -->
        <SolidColorBrush x:Key="PrimaryPurple" Color="#800080" />
        <SolidColorBrush x:Key="LightPurple" Color="#E6E6FA" />
        <SolidColorBrush x:Key="TextPurple" Color="#4B0082" />

        <!-- Global styles for controls -->
        <Style TargetType="ContentPage">
            <Setter Property="BackgroundColor" Value="{StaticResource LightPurple}" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource LightPurple}" />
            <Setter Property="TextColor" Value="{StaticResource PrimaryPurple}" />
            <Setter Property="CornerRadius" Value="8" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource TextPurple}" />
        </Style>
    </Application.Resources>
</Application>
