<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Moonstone3.ContactPage"
             Title="ContactPage">

    <ScrollView>
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label 
                Text="Contact Me"
                FontSize="28"
                TextColor="#800080"
                HorizontalOptions="Center" />
        <Image
                Source="contactcard.png"
                SemanticProperties.Description="Contact Image"
                HeightRequest="200"
                HorizontalOptions="Center" />
            <Label
                Text="Pay Me"
                FontSize="28"
                TextColor="#800080"
                HorizontalOptions="Center"/>
            <Image
                Source="venmome.jpg"
                SemanticProperties.Description="Venmo Image"
                HeightRequest="200"
                HorizontalOptions="Center" />

    </VerticalStackLayout>
    </ScrollView>
</ContentPage>