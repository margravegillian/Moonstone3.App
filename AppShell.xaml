<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Moonstone3.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Moonstone3"
    Shell.TitleColor="{StaticResource ShellTitleColor}"
    Shell.ForegroundColor="{StaticResource ShellTitleColor}">
    <!--Shell.FlyoutBehavior="Disabled">-->
   

    <Shell.FlyoutHeader>
        <Grid HeightRequest="100" BackgroundColor="DarkSlateBlue">
            
        </Grid>
    </Shell.FlyoutHeader>
    <FlyoutItem Title="Moonstone"> <!--change back to MainPage if issues-->
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
        
        <ShellContent
        Title="Moonstone"
        ContentTemplate="{DataTemplate local:MoonPage}"
        Route="MoonPage" />
        
        <ShellContent
        Title="Soundboard"
        ContentTemplate="{DataTemplate local:SoundBoard}"
        Route="soundboard" />
        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate local:AboutPage}"
            Route="AboutPage"/>

    </FlyoutItem>
    
             

</Shell>
