<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Moonstone3.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Moonstone3">
    <!--Shell.FlyoutBehavior="Disabled">-->
   

    <Shell.FlyoutHeader>
        <Grid HeightRequest="100" BackgroundColor="DarkSlateBlue">
            
        </Grid>
    </Shell.FlyoutHeader>
    <FlyoutItem Title="MainPage">
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
        
        <ShellContent
        Title="Moonstone"
        ContentTemplate="{DataTemplate local:MoonPage}"
        Route="MoonPage" />
        
        <ShellContent
        Title="Soundboard"
        ContentTemplate="{DataTemplate local:SoundBoard}"
        Route="soundboard" />

    </FlyoutItem>
    
             

</Shell>
